<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <TextView
                    android:id="@+id/textViewGain"
                    android:text="Ganhos (R$)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:paddingTop="10dp"/>

                <TextView
                    android:id="@+id/textViewLoss"
                    android:text="Gastos (R$)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:paddingTop="10dp"/>

                <TextView
                    android:id="@+id/textViewResult"
                    android:text="Saldo (R$)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:paddingTop="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <TextView
                    android:id="@+id/textViewGainReport"
                    android:padding="10dp"
                    android:text="R$"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textViewLossReport"
                    android:padding="10dp"
                    android:text="R$"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textViewResultReport"
                    android:padding="10dp"
                    android:text="R$"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
        </TableRow>

</TableLayout>
