<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinGerenciaMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#1D1C20</item>
        <item name="colorOnPrimary">#505050</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyleLoss" parent="Widget.MaterialComponents.Chip.Filter">

        <item name="chipBackgroundColor">@drawable/chip_loss_background</item>
        <item name="android:textColor">@drawable/chip_loss_text</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/alpha_white</item>

    </style>

    <style name="CustomChipStyleGain" parent="Widget.MaterialComponents.Chip.Filter">

        <item name="chipBackgroundColor">@drawable/chip_gain_background</item>
        <item name="android:textColor">@drawable/chip_gain_text</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/alpha_white</item>

    </style>
</resources>